<div id="page2">
        <div id="news">
          <div id="news-body">
            <div id="announcements">
              <div class="announcements-container">
                <div class="header">
                  <h1>Latest <span>Events</span></h1>
                </div>

                <div class="carousel-container">
                  <button
                    class="nav-btn left-btn"
                    onclick="scrollCarousel('left')"
                  >
                    &lt;
                  </button>
                  <div class="carousel" id="carousel">
                    <% events.forEach(event => { %>
                    <div class="card">
                      <img src="<%= event.img %>" alt="<%= event.title %>" />
                      <div class="card-content">
                        <p class="date"><%= event.date %></p>
                        <p class="title"><%= event.title %></p>
                        <a
                          href="<%= event.link %>"
                          target="_blank"
                          class="read-more"
                          >Read More →</a
                        >
                      </div>
                    </div>
                    <% }); %>
                  </div>

                  <button
                    class="nav-btn right-btn"
                    onclick="scrollCarousel('right')"
                  >
                    &gt;
                  </button>
                </div>

                <div style="margin-top: 15px">
                  <a href="#" class="read-more">View All →</a>
                </div>
              </div>
            </div>
            <div id="notices">
              <div id="notices-inner" class="news-container">
                <div class="news-header">
                  <h1>News</h1>
                  <span class="news-icon">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="currentColor"
                      height="40"
                      viewBox="0 -960 960 960"
                      width="48"
                    >
                      <path
                        d="M144.065-113.304q-28.104 0-48.117-20.014-20.013-20.013-20.013-48.117v-667.174l68.312 67.467 66.601-67.467 67.557 67.478 67.557-67.478 66.799 67.478 67.318-67.478 67.318 67.478 66.799-67.478 67.477 67.478 67.477-67.478 66.72 67.478 68.195-67.478v667.174q0 28.104-20.013 48.117-20.013 20.014-48.117 20.014h-671.87Zm0-68.131H447.37v-280H144.065v280Zm368.565 0h303.305v-107.13H512.63v107.13Zm0-172.63h303.305v-107.37H512.63v107.37Zm-368.565-172.87h671.87v-114.5h-671.87v114.5Z"
                      ></path>
                    </svg>
                  </span>
                </div>

                <div class="news-list" id="news-cards">
                  <% news.forEach(newsItem => { %>
                  <div class="news-card">
                    <% if (newsItem.isNew) { %>
                    <span class="new-badge">NEW</span>
                    <% } %>
                    <a href="<%= newsItem.link %>" target="_blank">
                      <%= newsItem.title %>
                    </a>
                  </div>
                  <% }); %>
                </div>

                <div class="news-footer">
                  <a href="#" class="view-all">View All →</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>